<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lunawatch</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel='stylesheet' type='text/css' href='/css/login-page.css'>
    <script src="/js/toggle_button.js" defer></script>
    <link rel="icon" href="../img/lunawatch-bg-image.png">
</head>

<body>
    <main id="login-container">
        <% if (method == 1) { %>
            <div id="change-input-container">
                <div id="change-input">
                    <div id="blue-div">
                        <h1>Welcome!</h1>
                        <h2 id="text">Login with your credentials for full access</h2>
                        <button type="button" class="btn btn-primary" id="toggle-button" >Sign In</button>
                    </div>
                </div>
            </div>
        <div id="toggle-sign-up">
            <form action="/login/sign-up" method="POST" class="sign-form" id="sign-up-form">
                <h1 id="Sign-title">Sign Up</h1>
                <p>Email</p>
                <input type="email" placeholder="Email..." class="sign-inputs" required name="email" autocomplete="username">
                <p>Password</p>
                <input type="password" placeholder="Password..." class="sign-inputs" required minlength="6" name="password" autocomplete="new-password">
                <br>
                <input type="submit" class="sign-input" class="sign-submit">
                <br>
            </form>
        </div>

        <div id="toggle-sign-in" class="hidden">
            <form action="/login/sign-in" method="POST" class="sign-form" id="sign-in-form">
                <h1 id="Sign-title">Sign In</h1>
                <p>Email</p>
                <input type="email" placeholder="Email..." class="sign-inputs" required name="email" autocomplete="username">
                <p>Password</p>
                <input type="password" placeholder="Password..." class="sign-inputs" required minlength="6" name="password" autocomplete="new-password">
                <br>
                <input type="submit" class="sign-input" class="sign-submit">
                <br>
            </form>
        </div>
        <% } else { %>
            <div id="change-input-container">
                <div id="change-input">
                    <div id="blue-div">
                        <h1>Welcome!</h1>
                        <h2 id="text">Register yourself for more useful tools!</h2>
                        <button type="button" class="btn btn-primary" id="toggle-button" >Sign Up</button>
                    </div>
                </div>
            </div>
            <div id="toggle-sign-up" class="hidden">
                <form action="/login/sign-up" method="POST" class="sign-form" id="sign-up-form">
                    <h1 id="Sign-title">Sign Up</h1>
                    <p>Email</p>
                    <input type="email" placeholder="Email..." class="sign-inputs" required name="email" autocomplete="username">
                    <p>Password</p>
                    <input type="password" placeholder="Password..." class="sign-inputs" required minlength="6" name="password" autocomplete="new-password">
                    <br>
                    <input type="submit" class="sign-input" class="sign-submit">
                    <br>
                </form>
            </div>
    
            <div id="toggle-sign-in">
                <form action="/login/sign-in" method="POST" class="sign-form" id="sign-in-form">
                    <h1 id="Sign-title">Sign In</h1>
                    <p>Email</p>
                    <input type="email" placeholder="Email..." class="sign-inputs" required name="email" autocomplete="username">
                    <p>Password</p>
                    <input type="password" placeholder="Password..." class="sign-inputs" required minlength="6" name="password" autocomplete="new-password">
                    <br>
                    <input type="submit" class="sign-input" class="sign-submit">
                    <br>
                </form>
            </div>
        <% } %>

            <div class="buttons">
                <button id="phantom-button" onclick="console.log('Oi')">
                    <img 
                    src="../img/phantom-icon.png" 
                    alt="MetaMask" 
                    class="phantom-icon"
                    >   
                </button>
                <button id="google-button">
                    <img 
                    src="../img/google-icon.png" 
                    alt="google" 
                    class="google-icon"
                    >   
                </button>
            </div>
            <div class="arrow" id="backArrow">
                <div class="arrow-top"></div>
                <div class="arrow-bottom"></div>
            </div>
        
        </main>
<script src="/js/loginPage.js"></script>

<%- include('partials/footer')  %>