          <li class="nav-item ms-auto">
            <a class="nav-link" href="/login/sign-in" id="login-btn">Sign in</a>
          </li>
          <li class="nav-item ms-auto">
            <a class="nav-link" href="/login/sign-up" id="login-btn">Sign up</a>
          </li>
          <% } else { %>
            <li class="nav-item ms-auto">
              <a class="nav-link" href="/profile" id="login-btn">Profile</a>
            </li>
          <% } %>
        </ul>
