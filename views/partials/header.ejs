<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lunawatch</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel='stylesheet' type='text/css' href='/css/header.css'>
    <link rel="icon" href="../img/lunawatch-bg-image.png">
  </head>
<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark fixed-top" data-bs-theme="dark"> 
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img src="../img/lunawatch-bg-image.png" alt="logo" width="40px" height="40px" class="me-2">
      Lunawatch
    </a>
    <!-- Toggler button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <% if (isAuthenticated) { %>
        <li class="nav-item">
          <a class="nav-link active" href="/register-crypto">Register a new crypto</a>
        </li>
        <% } %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Blockchains
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/general">General</a></li>
            <li><a class="dropdown-item" href="/solana">Solana</a></li>
          </ul>
        </li>
      </ul>
      
      <!-- Right-aligned links -->
      <ul class="navbar-nav ms-auto">
        <% if (!isAuthenticated) { %>
        <li class="nav-item">
          <a class="nav-link" href="/login/sign-in" id="sign-in-btn">Sign in</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login/sign-up" id="sign-up-btn">Sign up</a>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/profile" id="profile-btn">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="." id="logout-btn">Log Out</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
<script>
  document.getElementById('logout-btn').addEventListener('click', async function(event) {
    event.preventDefault();

    try {
        const response = await fetch('/logout', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
        });

        if (response.ok) {
            window.location.href = '/';
        } else {
            alert('Failed to log out');
        }
    } catch (error) {
        alert('An error occurred when trying to log out');
    }
});
</script>